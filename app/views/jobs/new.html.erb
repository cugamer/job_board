<% provide(:title, formatted_title("Add a new job")) %>

<h1>Create a new job</h1>

<div class="wide-form">
  <%= form_for(@job) do |f| %>
    <%= f.label :title %>
    <%= f.text_field :title %>
    
    <%= f.label :company %>
    <%= f.text_field :company %>
    
    <%= f.label :description %>
    <%= f.text_area :description %>
    
    <%= f.submit "Create Job" %>
  
  <% end %>
</div>