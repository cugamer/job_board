<header class="gen-header">
  <div class="container">
    <%= link_to "The Rails Jobs Board", root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <% if logged_in? %>
          <% if Rails.application.config.show_jobs_link %>
            <li><%= link_to "All jobs", jobs_path %></li>
          <% end %>
          <li><%= link_to "Create a New Job", new_job_path %></li>
          <li><%= link_to "Log out", logout_path, method: :delete %></li>
        <% else %>
          <li><%= link_to "Log in", login_path %></li>
        <% end %>
        <li><%= link_to "Help", help_url %></li>
      </ul>
    </nav>
  </div>
</header>
